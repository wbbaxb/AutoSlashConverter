<Window x:Class="AutoSlashConverter.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:AutoSlashConverter.Presentation.Behaviors"
        xmlns:converters="clr-namespace:AutoSlashConverter.Presentation.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:AutoSlashConverter.Presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:viewmodels="clr-namespace:AutoSlashConverter.Presentation.ViewModels"
        Title="{Binding Title}"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <!--<i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ShowStartupNotificationCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>-->

    <Grid>
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        DoubleClickCommand="{Binding ShowCommand}"
                        IconSource="/Images/Logo.ico"
                        LeftClickCommand="{Binding ShowCommand}"
                        ToolTipText="{Binding Title}">
            <tb:TaskbarIcon.TrayToolTip>
                <Border Margin="0,2"
                        Background="White"
                        BorderBrush="Orange"
                        BorderThickness="1"
                        CornerRadius="6">
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <Image Width="16" Source="/Images/Logo.ico" />
                        <TextBlock Margin="10,0,5,0"
                                   FontSize="16"
                                   Text="{Binding ConversionStatusText}" />
                    </StackPanel>
                </Border>
            </tb:TaskbarIcon.TrayToolTip>

            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Style="{StaticResource CompactContextMenu}">
                    <CheckBox Height="35"
                              Margin="-30,0"
                              VerticalContentAlignment="Center"
                              Content="{Binding ConversionStatusText}"
                              IsChecked="{Binding IsConversionEnabled}"
                              Style="{StaticResource CustomToggleSwitch}" />

                    <Separator Style="{StaticResource CompactSeparator}" />

                    <MenuItem Height="35"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Command="{Binding ShowHistoryCommand}"
                              FontSize="16"
                              Header="查看历史"
                              Style="{StaticResource CompactMenuItem}" />

                    <Separator Style="{StaticResource CompactSeparator}" />

                    <MenuItem Height="35"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Command="{Binding ShutdownCommand}"
                              FontSize="16"
                              Header="退出"
                              Style="{StaticResource CompactMenuItem}" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <Border Width="500"
                Height="500"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  Opacity="0.3"
                                  ShadowDepth="8"
                                  Color="#30000000" />
            </Border.Effect>

            <i:Interaction.Behaviors>
                <behaviors:ItemMouseDownBehavior />
            </i:Interaction.Behaviors>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#FAFAFA">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Margin="20,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <Ellipse Style="{StaticResource StatusIndicator}" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Foreground="#333"
                                   Text="{Binding Title}" />
                    </StackPanel>

                    <StackPanel Margin="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">

                        <TextBlock VerticalAlignment="Center"
                                   Cursor="Hand"
                                   FontSize="16"
                                   Text="—"
                                   ToolTip="最小化">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding MinsizeCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>

                        <TextBlock Margin="10,0"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"
                                   FontSize="16"
                                   Text="✕"
                                   ToolTip="关闭">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding CloseCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <TabControl Grid.Row="1"
                            Margin="10"
                            Background="Transparent"
                            BorderThickness="0"
                            SelectedIndex="{Binding SelectedTabIndex}">
                    <TabControl.Resources>
                        <Style BasedOn="{StaticResource TabItemStyle0}" TargetType="TabItem" />
                    </TabControl.Resources>

                    <TabItem FontSize="14" Header="状态">
                        <Grid Margin="10,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Margin="0,0,0,25"
                                               HorizontalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Light"
                                               Foreground="{Binding IsConversionEnabled, Converter={StaticResource BoolToColorConverter}}"
                                               Text="{Binding ConversionStatusText}" />

                                    <CheckBox Grid.Row="1"
                                              Margin="0,0,0,20"
                                              HorizontalAlignment="Center"
                                              Content="{Binding ConversionStatusText}"
                                              IsChecked="{Binding IsConversionEnabled}"
                                              Style="{StaticResource CustomToggleSwitch}" />
                                </StackPanel>

                                <Border Grid.Row="1"
                                        Padding="15"
                                        Background="#F8F9FA"
                                        CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock Margin="0,0,0,8"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Foreground="#666"
                                                   Text="功能说明" />
                                        <TextBlock Margin="0,0,0,4"
                                                   FontSize="12"
                                                   Foreground="#888"
                                                   Text="• 监听剪贴板，自动将 Windows 路径中的 \ 转换为 /"
                                                   TextWrapping="Wrap" />
                                        <TextBlock FontSize="12"
                                                   Foreground="#888"
                                                   Text="• 例如：C:\Users\Name → C:/Users/Name"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <TabItem FontSize="14" Header="转换历史">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Button Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Background="White"
                                    BorderThickness="0"
                                    Command="{Binding ClearHistoryCommand}"
                                    Content="清空"
                                    Cursor="Hand"
                                    FontSize="16"
                                    Foreground="Red"
                                    Visibility="{Binding ConversionHistories.Count, Converter={StaticResource CountToVisibilityConverter}}" />

                            <!--  历史记录列表  -->
                            <Border Grid.Row="1"
                                    Background="#FAFAFA"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="6">
                                <ScrollViewer Style="{StaticResource ScrollViewerStyle}" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding ConversionHistories}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="5"
                                                        Padding="10"
                                                        Background="White"
                                                        BorderBrush="#E0E0E0"
                                                        BorderThickness="1"
                                                        CornerRadius="4">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Row="0"
                                                                   FontSize="14"
                                                                   Foreground="#999"
                                                                   Text="{Binding FormattedTime}" />

                                                        <Grid Grid.Row="1" Margin="0,5">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0"
                                                                       VerticalAlignment="Center"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="#666"
                                                                       Text="原路径: " />

                                                            <TextBlock Grid.Column="1"
                                                                       Margin="10,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       FontSize="14"
                                                                       Foreground="#4CAF50"
                                                                       Text="{Binding OriginalPath}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       ToolTip="{Binding OriginalPath}" />

                                                            <Button Grid.Column="2"
                                                                    Margin="5,0,0,0"
                                                                    Padding="4,2"
                                                                    Background="#4CAF50"
                                                                    BorderThickness="0"
                                                                    Command="{Binding DataContext.CopyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding OriginalPath}"
                                                                    Content="复制"
                                                                    Cursor="Hand"
                                                                    FontSize="14"
                                                                    Foreground="White" />
                                                        </Grid>

                                                        <Grid Grid.Row="2" Margin="0,5,0,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0"
                                                                       VerticalAlignment="Center"
                                                                       FontSize="14"
                                                                       FontWeight="Medium"
                                                                       Foreground="#666"
                                                                       Text="转换后: " />

                                                            <TextBlock Grid.Column="1"
                                                                       Margin="10,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       FontSize="14"
                                                                       Foreground="{StaticResource mainColor}"
                                                                       Text="{Binding ConvertedPath}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       ToolTip="{Binding ConvertedPath}" />

                                                            <Button Grid.Column="2"
                                                                    Margin="5,0,0,0"
                                                                    Padding="4,2"
                                                                    Background="{StaticResource mainColor}"
                                                                    BorderThickness="0"
                                                                    Command="{Binding DataContext.CopyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding ConvertedPath}"
                                                                    Content="复制"
                                                                    Cursor="Hand"
                                                                    FontSize="14"
                                                                    Foreground="White" />
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>

                <Border Grid.Row="2"
                        Background="#F8F9FA"
                        CornerRadius="0,0,12,12">
                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#999"
                                   Text="程序运行在系统托盘" />

                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#999"
                                   Text="ESC 隐藏窗口" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
